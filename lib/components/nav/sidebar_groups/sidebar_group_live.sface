<ul
  :if={module_enabled?(Bonfire.UI.Topics.SidebarTopicLive)}
  data-description="Topics and sub-groups"
  class="menu p-0 m-0"
>
  <Dynamic.Component
    :for={{%{type: :topic} = subcategory, subchildren} <- @children}
    module={Bonfire.UI.Topics.SidebarTopicLive}
    category={subcategory}
    children={subchildren}
  />
  <Bonfire.UI.Groups.SidebarGroupLive
    :for={{%{type: :group} = subcategory, subchildren} <- @children}
    category={subcategory}
    children={subchildren}
  />
</ul>