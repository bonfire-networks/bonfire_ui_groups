{!-- <div class=""> --}
<LinkLive
  to={path(@category)}
  class="w-full flex items-center !gap-3 !p-1 !px-2 !m-0 bg-base-100 hover:bg-base-content/10"
>
  <div
    class="hero relative bg-no-repeat h-[20px] w-[20px] rounded-full bg-cover bg-center]"
    style={"background-image: url('#{Media.banner_url(@category)}');"}
  />
  <span class="text-base-content max-w-[180px] truncate text-base-content/90 text-[15px] flex-1">{e(@category, :profile, :name, nil)}</span>
</LinkLive>

